let a=[ 0, 1, 2, 3, 4 ];
let first;
let second;
let third;
let forr;


for(let i in a){

	if(i==0){

		first=a.reverse()
	}else if(i==1){

		let v=first.slice(0,4).reverse()
		second=v.concat(first.at(-1))
	}else if(i==2){

		let j=second.slice(0,3).reverse()
		third=j.concat(second.slice(3,5))

	}else if(i==3){

		let j=third.slice(0,2).reverse()
		forr=j.concat(third.slice(2,5))
	}

}


console.log(first)
console.log(second)
console.log(third)
console.log(forr)
